	<bean id="transactionManager" class="org.springframework.jdbc.datasource.DataSourceTransactionManager">
		<property name="dataSource" ref="dynamicDataSource" />
	</bean>

	<!-- mybatis Dao -->
	<bean id="appBizDaoImpl" class="com.iflytek.xfyun.dao.impl.AppBizDaoImpl">
		<property name="sqlSessionFactory" ref="sqlSessionFactory" />
	</bean>
	
	<bean id="appRetentDaoImpl" class="com.iflytek.xfyun.dao.impl.AppRetentDaoImpl">
		<property name="sqlSessionFactory" ref="sqlSessionFactory" />
	</bean>
	
	<bean id="appNameDaoImpl" class="com.iflytek.xfyun.dao.impl.AppNameDaoImpl">
		<property name="sqlSessionFactory" ref="sqlSessionFactory" />
	</bean>
	
